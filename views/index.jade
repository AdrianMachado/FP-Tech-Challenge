doctype 5
html.
	<head>
		<meta charset="utf8">
		<base href="/">
		<title>Fresh Prints Tech Challenge</title>
		<link rel="stylesheet" href="/css/app.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	</head>
	<body>
		<div ng-app="myApp.controllers" ng-controller="AppCtrl">
			<div class="container">
			<h2>Vertical (basic) form</h2>
				<form role="form">
					<div class="form-group">
						<label for="style">Style Code:</label>
						<input type="text" ng-model="formData.styleCode" class="form-control" id="style" placeholder="Enter a style code" required="true">
					</div>

					<div class="form-group">
						<label for="color">Color:</label>
						<input type="color" ng-model="formData.colorCode" class="form-control" id="color">
						<div>{{formData.colorCode}}</div>
					</div>
					
					<div class="form-group">
						<label for="size">Size:</label>
						<select ng-model="formData.sizeCode" class="form-control" id="size" placeholder="Select a size" required="true">
							<option ng-repeat="option in apparelSizes" value="{{option.id}}">{{option.size}}</option>
						</select>
						<div>{{formData.sizeCode}}</div>
					</div>

					<div class="form-group">
						<label for="quantity">Quantity:</label>
						<input type="number" ng-model="fromData.quantity" class="form-control" id="quantity" placeholder="0" min="0" required="true">
					</div>
					<div>{{formData.quantity}}</div>
					<button type="submit" ng-click="{{quote}}"class="btn btn-default">Submit</button>
				</form>
			</div>
		</div>		
		<script src="js/lib/angular/angular.js"></script>
		<script src="js/app.js"></script>
		<script src="js/services.js"></script>
		<script src="js/controllers.js"></script>
		<script src="js/filters.js"></script>
		<script src="js/directives.js"></script>
	</body>