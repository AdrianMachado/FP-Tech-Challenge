doctype 5
html.
	<head>
		<meta charset="utf8">
		<base href="/">
		<title>Fresh Prints Tech Challenge</title>
		<link rel="stylesheet" href="/css/app.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	</head>
	<body>
		<div ng-app="myApp.controllers" ng-controller="AppCtrl">
			<div class="container">
			<h2>Vertical (basic) form</h2>
				<form role="form">
					<div class="form-group">
						<label for="brand">Brand:</label>
						<select ng-model="apparelId" ng-change=""class="form-control" id="brand" placeholder="Select a brand" required="true">
							<option ng-repeat="option in availableApparel" value="{{option.id}}">{{option.brand}}</option>
						</select>
						<div>{{formData.styleCode}}</div>
					</div>

					<div class="form-group">
						<label for="color">Color:</label>
						<select ng-model="formData.colorCode" class="form-control" id="color" placeholder="Select a color" required="true">
							<option ng-repeat="colors in availableApparel[apparelId-1].color_codes.split(';')" value="{{colors.split(':')[0]}}">{{colors.split(':')[2]}}</option>
						</select>
						<div>{{formData.colorCode}}</div>
					</div>
					
					<div class="form-group">
						<label for="size">Size:</label>
						<select ng-model="formData.sizeCode" class="form-control" id="size" placeholder="Select a size" required="true">
							<option ng-repeat="sizes in availableApparel[apparelId-1].size_codes.split(';')" value="{{sizes.split(':')[0]}}">{{sizes.split(':')[1]}}</option>
						</select>
						<div>{{formData.sizeCode}}</div>
					</div>

					<div class="form-group">
						<label for="quantity">Quantity:</label>
						<input type="number" ng-model="fromData.quantity" class="form-control" id="quantity" placeholder="0" min="0" required="true">
					</div>
					<div>{{formData.quantity}}</div>
					<button type="submit" ng-click="getAvailableApparel()"class="btn btn-default">Submit</button>
					<div>{{availableApparel}}</div>
				</form>
			</div>
		</div>		
		<script src="js/lib/angular/angular.js"></script>
		<script src="js/app.js"></script>
		<script src="js/services.js"></script>
		<script src="js/controllers.js"></script>
		<script src="js/filters.js"></script>
		<script src="js/directives.js"></script>
	</body>